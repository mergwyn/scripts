#!/bin/bash
pictureDir="/home/gary/odrive/Amazon Cloud Drive/Pictures"

find "${pictureDir}" \( -name 'ORG_*' -o -name 'DSC*' -o -name 'IMG*' \) ! -name '*.MOV' -type f -print -exec exiv2 rename -F {} \; 
rename --verbose 's/.jpg$/.jpeg/' "${pictureDir}"/**/*.jpg
rename --verbose 's/.JPG$/.jpeg/' "${pictureDir}"/**/*.JPG
