#!/usr/bin/env bash
location="-l N52 -L W01 -z 0"
Usage()
{
  cat <<EOF >&2
$0: <flags> 
Allowed flags are:
--simple      Just print day/night rather than times
--help        This message
EOF
}

params="$(getopt -o s --long simple,help --name "$0" -- "$@")"
eval set -- "$params"

while true ; do
  case "$1" in
    --simple|-s) simple=simple; shift;;
    --help)      Usage; exit 0;;
    --)          shift; break ;;
    *)           echo >&2 "Not implemented: $1" ; Usage; exit 1;;
  esac
done

# shellcheck disable=SC2086
while read -r label time ; do
  case ${label} in
  sunrise:) sunrise=${time};;
  sunset:)  sunset=${time};;
  esac
done < <(hdate -s -q ${location})


if [[ -n ${simple} ]] ; then
  now=$(date +'%H:%M')
  if [[ ${sunrise} < ${now} ]] && [[ ${now} < ${sunset} ]] ; then
    echo day
  else
    echo night
  fi
else
  echo "Sunrise: $sunrise"
  echo "Sunset: $sunset"
fi
