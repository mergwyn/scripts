#!/bin/bash
pictureDir="/home/gary/odrive/Amazon Cloud Drive/Pictures/"
findArgs=
function finish {
  :
}
trap finish EXIT

find "${pictureDir}" ${findArgs} -type f -name '*.jpeg' -print |
while read -r file
do
    orientation=$(exiv2 -p v "${file}" 2>/dev/null | sed -n 's:^.*Image.*Orientation.*\([0-9] *[0-9]\)$:\1:p')
    case "${orientation}" in
    "1  1"|"")
      #echo "${file}": "${orientation}" OK
      :
      ;;
    *)
      #echo "${file}": "${orientation}" needs to be rotated
      exiftran -ai "${file}"
      ;;
    esac
done
